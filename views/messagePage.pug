include ./includes/main.pug
include ./includes/header.pug
block messagePage
  div.chatWrap.col-lg-6.col-md-6.col-sm-12.col-xs-12.col-md-offset-3.col-lg-offset-3
    div.chatUserMessages.col-lg-12.col-md-12.col-sm-12.col-xs-12#chatUserMessages
      span получатель: #{recipient}
      if messages
        each message in messages
          p #{message.name} : #{message.message}
      span#onlineUsers
    div.chatUserInputs.col-lg-12.col-md-12.col-sm-12.col-xs-12#chatUserInputs
      input(placeholder = 'Ваше сообщение').chatInput#chatInput
      button.chatSend#chatSend Отправить
      
script.
  var recipient = '#{recipient}' || 'test';
  var USER = '#{user.username}';
  var chatName = '#{chatName}'
script(type='text/javascript', src= "https://cdn.socket.io/socket.io-1.4.5.js")
script(type='text/javascript', src= "/js/privateMessage.js")
